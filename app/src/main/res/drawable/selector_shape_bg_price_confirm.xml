<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape>
            <!-- 填充的颜色：这里设置背景透明 -->
            <solid android:color="@color/project_price_text" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="3dp" />
        </shape>

    </item>

    <item android:state_selected="true">
        <shape>

            <gradient android:angle="270"
                android:centerColor="@color/affirm_middle"
                android:endColor="@color/affirm_bottom"
                android:startColor="@color/affirm_top"
                android:type="linear" />
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>
