<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comm_main_header_height"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/user_background" />

    <com.kelee.ui.widget.RoundedImageView
        android:id="@+id/user_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/user_background"
        android:layout_alignRight="@id/user_background"
        android:layout_marginRight="20dp"
        android:translationY="20dp"
        app:riv_oval="true" />

</RelativeLayout>
